{
	"name": "lognow",
	"version": "0.4.1",
	"description": "Quick and clean universal logging.",
	"keywords": [
		"logging",
		"loglayer",
		"log",
		"electron",
		"npm-package"
	],
	"homepage": "https://github.com/kitschpatrol/lognow",
	"bugs": "https://github.com/kitschpatrol/lognow/issues",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kitschpatrol/lognow.git"
	},
	"license": "MIT",
	"author": {
		"name": "Eric Mika",
		"email": "eric@ericmika.com",
		"url": "https://ericmika.com"
	},
	"type": "module",
	"exports": {
		".": {
			"node": {
				"types": "./dist/node/index.d.ts",
				"import": "./dist/node/index.js"
			},
			"browser": {
				"types": "./dist/browser/index.d.ts",
				"import": "./dist/browser/index.js"
			},
			"default": {
				"types": "./dist/browser/index.d.ts",
				"import": "./dist/browser/index.js"
			}
		},
		"./electron": {
			"node": {
				"types": "./dist/electron/main/index.d.ts",
				"import": "./dist/electron/main/index.js"
			},
			"browser": {
				"types": "./dist/electron/renderer/index.d.ts",
				"import": "./dist/electron/renderer/index.js"
			},
			"default": {
				"types": "./dist/electron/renderer/index.d.ts",
				"import": "./dist/electron/renderer/index.js"
			}
		},
		"./electron/preload": {
			"types": "./dist/electron/preload/index.d.ts",
			"import": "./dist/electron/preload/index.js"
		}
	},
	"files": [
		"dist/*"
	],
	"scripts": {
		"build": "tsdown && tsc -p tsconfig.build.json",
		"clean": "git rm -f pnpm-lock.yaml ; git clean -fdX",
		"fix": "ksc fix",
		"lint": "ksc lint",
		"release": "bumpp --commit 'Release: %s' && pnpm run build && NPM_AUTH_TOKEN=$(op read 'op://Personal/npm/token') && pnpm publish",
		"test": "vitest run",
		"test:browser": "vitest run --project browser",
		"test:node": "vitest run --project node"
	},
	"dependencies": {
		"@types/node": "^20.19.27",
		"loglayer": "^8.4.0"
	},
	"devDependencies": {
		"@kitschpatrol/shared-config": "^5.10.0",
		"@loglayer/context-manager": "^1.2.0",
		"@loglayer/transport": "^2.3.13",
		"@loglayer/transport-log-file-rotation": "^2.1.16",
		"@vitest/browser-playwright": "^4.0.16",
		"ansi-colors": "^4.1.3",
		"bumpp": "^10.3.2",
		"defu": "^6.1.4",
		"electron": ">=39.2.7",
		"filenamify": "^7.0.1",
		"next-json": "^0.5.1",
		"node-inspect-extracted": "^3.3.0",
		"read-package-up": "^12.0.0",
		"safe-stable-stringify": "^2.5.0",
		"serialize-error": "^12.0.0",
		"terminal-size": "^4.0.0",
		"tsdown": "^0.18.2",
		"typescript": "~5.9.3",
		"untildify": "^6.0.0",
		"vitest": "^4.0.16",
		"wrap-ansi": "^9.0.2"
	},
	"packageManager": "pnpm@10.26.2",
	"engines": {
		"node": ">=20.19.0"
	}
}
