{
	"name": "lognow",
	"version": "0.5.2",
	"description": "Quick and clean universal logging.",
	"keywords": [
		"logging",
		"loglayer",
		"log",
		"electron",
		"npm-package"
	],
	"homepage": "https://github.com/kitschpatrol/lognow",
	"bugs": "https://github.com/kitschpatrol/lognow/issues",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kitschpatrol/lognow.git"
	},
	"license": "MIT",
	"author": {
		"name": "Eric Mika",
		"email": "eric@ericmika.com",
		"url": "https://ericmika.com"
	},
	"type": "module",
	"exports": {
		".": {
			"node": {
				"types": "./dist/node/index.d.ts",
				"import": "./dist/node/index.js"
			},
			"browser": {
				"types": "./dist/browser/index.d.ts",
				"import": "./dist/browser/index.js"
			},
			"default": {
				"types": "./dist/browser/index.d.ts",
				"import": "./dist/browser/index.js"
			}
		},
		"./electron": {
			"node": {
				"types": "./dist/electron/main/index.d.ts",
				"import": "./dist/electron/main/index.js"
			},
			"browser": {
				"types": "./dist/electron/renderer/index.d.ts",
				"import": "./dist/electron/renderer/index.js"
			},
			"default": {
				"types": "./dist/electron/renderer/index.d.ts",
				"import": "./dist/electron/renderer/index.js"
			}
		},
		"./electron/preload": {
			"types": "./dist/electron/preload/index.d.ts",
			"import": "./dist/electron/preload/index.js"
		},
		"./standalone": {
			"types": "./dist/standalone/index.d.ts",
			"import": "./dist/standalone/index.js"
		}
	},
	"jsdelivr": "./dist/standalone/index.js",
	"unpkg": "./dist/standalone/index.js",
	"files": [
		"dist/*"
	],
	"scripts": {
		"build": "tsdown && attw -P --profile esm-only && publint",
		"clean": "git rm -f pnpm-lock.yaml ; git clean -fdX",
		"fix": "ksc fix",
		"lint": "ksc lint",
		"release": "bumpp --commit 'Release: %s' && pnpm run build && NPM_AUTH_TOKEN=$(op read 'op://Personal/npm/token') && pnpm publish",
		"test": "vitest run",
		"test:browser": "vitest run --project browser",
		"test:node": "vitest run --project node"
	},
	"dependencies": {
		"@loglayer/context-manager": "^2.0.2",
		"@loglayer/transport": "^3.0.2",
		"@loglayer/transport-log-file-rotation": "^3.0.2",
		"@types/node": "~20.17.58",
		"ansi-colors": "^4.1.3",
		"defu": "^6.1.4",
		"filenamify": "^7.0.1",
		"loglayer": "^9.1.0",
		"next-json": "^0.5.1",
		"node-inspect-extracted": "^3.3.0",
		"read-package-up": "^12.0.0",
		"safe-stable-stringify": "^2.5.0",
		"serialize-error": "^13.0.1",
		"terminal-size": "^4.0.1",
		"untildify": "^6.0.0",
		"wrap-ansi": "^10.0.0"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.18.2",
		"@kitschpatrol/shared-config": "^6.0.0",
		"@vitest/browser-playwright": "^4.0.18",
		"bumpp": "^10.4.1",
		"dts-bundle-generator": "^9.5.1",
		"electron": ">=39.7.0",
		"publint": "^0.3.17",
		"tsdown": "^0.20.3",
		"typescript": "~5.9.3",
		"vitest": "^4.0.18"
	},
	"packageManager": "pnpm@10.30.2",
	"engines": {
		"node": ">=20.17.0"
	},
	"devEngines": {
		"runtime": {
			"name": "node",
			"version": ">=22.21.0"
		}
	}
}
