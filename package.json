{
	"name": "@kitschpatrol/log",
	"version": "0.0.0",
	"description": "A library project.",
	"keywords": [
		"npm-package",
		"logging",
		"loglayer",
		"log"
	],
	"homepage": "https://github.com/kitschpatrol/log",
	"bugs": "https://github.com/kitschpatrol/log/issues",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kitschpatrol/log.git"
	},
	"license": "MIT",
	"author": {
		"name": "Eric Mika",
		"email": "eric@ericmika.com",
		"url": "https://ericmika.com"
	},
	"type": "module",
	"exports": {
		".": {
			"node": {
				"types": "./dist/node/index.d.ts",
				"import": "./dist/node/index.js"
			},
			"browser": {
				"types": "./dist/browser/index.d.ts",
				"import": "./dist/browser/index.js"
			},
			"default": {
				"types": "./dist/browser/index.d.ts",
				"import": "./dist/browser/index.js"
			}
		}
	},
	"files": [
		"dist/*"
	],
	"scripts": {
		"build": "tsdown",
		"clean": "git rm -f pnpm-lock.yaml ; git clean -fdX",
		"fix": "ksc fix",
		"lint": "ksc lint",
		"release": "bumpp --commit 'Release: %s' && pnpm run build && NPM_AUTH_TOKEN=$(op read 'op://Personal/npm/token') && pnpm publish",
		"test": "pnpm run test:node && pnpm run test:browser",
		"test:browser": "vitest run --config vitest.browser.config.ts",
		"test:coverage": "vitest run --coverage",
		"test:node": "vitest run",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@types/node": "^20.19.23"
	},
	"devDependencies": {
		"@kitschpatrol/shared-config": "^5.7.4",
		"@loglayer/context-manager": "^1.1.6",
		"@loglayer/transport": "^2.3.4",
		"@loglayer/transport-log-file-rotation": "^2.1.7",
		"@vitest/browser": "^4.0.2",
		"ansi-colors": "^4.1.3",
		"bumpp": "^10.3.1",
		"filenamify": "^7.0.0",
		"loglayer": "^6.10.0",
		"node-inspect-extracted": "^3.2.2",
		"playwright": "^1.56.1",
		"read-package-up": "^11.0.0",
		"safe-stable-stringify": "^2.5.0",
		"serialize-error": "^12.0.0",
		"terminal-size": "^4.0.0",
		"tsdown": "^0.15.9",
		"typescript": "~5.9.3",
		"vitest": "^4.0.2",
		"wrap-ansi": "^9.0.2"
	},
	"packageManager": "pnpm@10.19.0",
	"engines": {
		"node": ">=20.19.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
